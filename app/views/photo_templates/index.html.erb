<h1>List of photos</h1>

  <form action="/insert_photo_record">
      <label for="user_image">Image</label>
      <input id="user_image" type="text" name="input_image" placeholder="Enter a URL for the image...">

      <label for="user_caption">Caption</label>
      <input id="user_caption" type="text" name="input_caption" placeholder="Enter a caption for the photo...">

      <label for="user_id">Owner ID</label>
      <input id="user_id" type="text" name="input_owner_id" placeholder="Enter an ID of a User">

      <button>Add photo</button>
  </form>

<hr>

<table border ="1">
    <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <% @list_of_photos.each do |a_photo| %>
  <tr>
    <td>
      <img src="<%=a_photo.image%>">
    </td>

    <td>
      <%=a_photo.caption%>
    </td>

    <td>
      <%=a_photo.poster.username%>
    </td>

    <td>
      <%=a_photo.created_at%>
    </td>

    <td>
      <a href="/photos/<%=a_photo.id%>">
        Show details
      </a>
    </td>
  </tr>
  <%end%>
</table>